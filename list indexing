# Original List
fruits = ["apple", "banana", "cherry", "orange", "kiwi", "melon", "mango"]

print("Original List:", fruits)

# Syntax: list[start:end]
# start is INCLUDED
# end is EXCLUDED

print("\nBasic Slicing Examples:")

print(fruits[1:4])      # From index 1 to 3
print(fruits[:3])       # From beginning to index 2
print(fruits[3:])       # From index 3 to end
print(fruits[:])        # Full copy of list


# Negative index counts from end
# -1 is last element

print("\nNegative Index Slicing:")

print(fruits[-3:])      # Last 3 elements
print(fruits[-5:-2])    # From -5 to -3


# Syntax: list[start:end:step]
# Step means jump interval

print("\nSlicing with Step:")

print(fruits[::2])      # Every 2nd element
print(fruits[1:6:2])    # From index 1 to 5, step 2
print(fruits[::-1])     # Reverse entire list


# Reverse Part of List

print("\nReverse Part of List:")

print(fruits[1:5][::-1])  # Slice first, then reverse


# Replacing Elements Using Slicing

print("\nReplacing Elements:")

nums = [1, 2, 3, 4, 5, 6]
print("Original nums:", nums)

nums[2:4] = [10, 20]   # Replace index 2 and 3
print("After replacing 2 elements:", nums)

nums[2:4] = [100, 200, 300]  # Insert more elements than replaced
print("After inserting more elements:", nums)


# Deleting Elements Using Slicing

print("\nDeleting Elements:")

nums2 = [1, 2, 3, 4, 5]
print("Original:", nums2)

del nums2[1:3]   # Deletes index 1 and 2
print("After deletion:", nums2)


# Proper Copy of List

print("\nCopying List:")

copy_list = fruits[:]   # Creates shallow copy
print("Copied List:", copy_list)


# Advanced Step Examples

print("\nAdvanced Step Examples:")

print(fruits[::-2])      # Reverse with step 2
print(fruits[:-4:-1])    # Reverse last 3 elements


# Common Mistake

print("\nCommon Mistake Example:")

print(fruits[2:2])   # Empty list because start == end


 
